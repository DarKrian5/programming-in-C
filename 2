#include <stdio.h>

int main() {
double mat_double[3][3];
int i, j;
double Sumg = 0;
double Sump = 0;

printf("Znachenie dlya 3*3:\n");
for (i = 0; i < 3; i++) {
    for (j = 0; j < 3; j++) {
        scanf("%lf", &mat_double[i][j]);
        if (i == j) {
            Sumg += mat_double[i][j];
        }
        if (i + j == 2) {
            Sump += mat_double[i][j];
        }
    }
}

printf("Summa na glavnoi: %lf\n", Sumg);
printf("Summa na pobochnoi: %lf\n", Sump);

int mat_int[2][2];

printf("Znachenie dlya 2*2 (int):\n");
for (i = 0; i < 2; i++) {   
    for (j = 0; j < 2; j++) {
        scanf("%d", &mat_int[i][j]);
    }
}

printf("Kvadrat mat 2*2 (int):\n");
for (i = 0; i < 2; i++) {
    for (j = 0; j < 2; j++) {
        printf("%d ", mat_int[i][j] * mat_int[i][j]);
    }
    printf("\n");
}

return 0;
}
